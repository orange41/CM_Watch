<h2>お知らせ</h2>
<ul class="list-group">
  <% @notifications.each do |notification| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <%= notification.message %> 
        <small class="text-muted"><%= notification.created_at.strftime("%Y-%m-%d %H:%M") %></small>
      </div>
      <%= link_to '確認しました', mark_as_read_notification_path(notification), method: :patch, class: 'btn btn-sm btn-primary', data: { disable_with: "読み込み中..." } %>
    </li>
  <% end %>
</ul>

<style>
  .list-group-item {
    margin-bottom: 10px;
  }
  .btn-primary {
    min-width: 100px;
  }
</style>
