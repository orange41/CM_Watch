<h1>管理者プロフィールを編集する</h1>
<%= form_with model: @admin, url: admin_panel_admin_dashboard_update_path, method: :patch do |form| %>
  <div>
    <%= form.label :employee_number, '社員番号' %>
    <%= form.text_field :employee_number, required: true %>
  </div>
  <div>
    <%= form.label :password, '新しいパスワード' %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation, '新しいパスワード（確認用）' %>
    <%= form.password_field :password_confirmation %>
  </div>
  <div>
    <%= form.submit '更新' %>
  </div>
<% end %>
