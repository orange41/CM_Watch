<!-- app/views/homes/admin_login.html.erb -->
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>管理者ログイン</title>
    <%= stylesheet_link_tag 'styles', media: 'all' %>
</head>
<body>
    <header>
        <h1>管理者ログイン</h1>
    </header>
    <main>
        <%= form_with url: admin_session_path, method: :post do %>
            <label for="email">メールアドレス:</label>
            <%= email_field_tag :email, nil, required: true %>
            <label for="password">パスワード:</label>
            <%= password_field_tag :password, nil, required: true %>
            <%= submit_tag 'ログイン' %>
        <% end %>
    </main>
</body>
</html>
