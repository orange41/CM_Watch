<!-- app/views/staffs/sessions/new.html.erb -->
<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :employee_number, '社員番号' %><br />
    <%= f.text_field :employee_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit 'ログイン' %>
  </div>
<% end %>


<%= link_to "サインアップ", new_registration_path(resource_name) %>
