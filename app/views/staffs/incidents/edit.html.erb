<!-- app/views/staffs/incidents/edit.html.erb -->
<h1>事故事例の編集</h1>

<%= form_with model: @incident, url: staffs_incident_path(@incident), local: true do |form| %>
  <div class="field">
    <%= form.label :title, 'タイトル' %><br />
    <%= form.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :description, '説明' %><br />
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :occurred_at, '発生日時' %><br />
    <%= form.datetime_select :occurred_at %>
  </div>

  <div class="actions">
    <%= form.submit '更新' %>
  </div>
<% end %>
