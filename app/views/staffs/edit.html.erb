<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center custom-title">プロフィール編集</h2> 

      <%= form_with model: @staff, url: staff_path(@staff), local: true, method: :patch do |form| %>


        <div class="field">
          <%= form.label :name, '名前' %><br />
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="field">
          <%= form.label :password, 'パスワード（変更する場合のみ）' %><br />
          <%= form.password_field :password, class: 'form-control', autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= form.label :password_confirmation, 'パスワード（確認用）' %><br />
          <%= form.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= form.submit "更新", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>