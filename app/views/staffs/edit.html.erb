<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center custom-title">プロフィール編集</h2> <!-- カスタムクラスを追加 -->

      <%= form_with model: @staff, url: staff_path(@staff), local: true, method: :patch, html: { class: 'form-horizontal' } do |form| %>
        <div class="form-group row">
          <label class="col-sm-3 col-form-label"><%= form.label :employee_number, '社員番号' %></label>
          <div class="col-sm-9">
            <%= form.text_field :employee_number, class: 'form-control', readonly: true %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-3 col-form-label"><%= form.label :name, '名前' %></label>
          <div class="col-sm-9">
            <%= form.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-3 col-form-label"><%= form.label :password, 'パスワード（変更する場合のみ）' %></label>
          <div class="col-sm-9">
            <%= form.password_field :password, class: 'form-control', autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-3 col-form-label"><%= form.label :password_confirmation, 'パスワード（確認用）' %></label>
          <div class="col-sm-9">
            <%= form.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-9 offset-sm-3">
            <%= form.submit "更新", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
